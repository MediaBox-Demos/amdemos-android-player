<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色 Setting the background color -->
    <item
        android:id="@android:id/background"
        android:drawable="@color/alivc_player_bg_progress_rear"/>

    <!--  设置进度条颜色 Setting the progress bar color -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/alivc_player_bg_progress_front"
                    android:startColor="@color/alivc_player_bg_progress_rear" />
            </shape>
        </clip>
    </item>
</layer-list>